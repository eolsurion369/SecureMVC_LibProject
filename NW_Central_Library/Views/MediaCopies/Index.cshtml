@model IEnumerable<NW_Central_Library.Models.LibraryModels.MediaCopy>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Media)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MediaFormat)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MediaGenre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MediaType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CopyNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InActive)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InActiveDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Media.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MediaFormat.Format)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MediaGenre.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MediaType.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CopyNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InActive)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InActiveDate)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a>
            </td>
        </tr>
}
    </tbody>
</table>
